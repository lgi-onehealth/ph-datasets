process {
    
    withName: 'PROCESS_METADATA' {
        publishDir = [
            path: { "${params.outdir}/metadata/" },
            mode: params.publish_mode,
            pattern: '*metadata*'
        ]
    }
    withName: 'FFQ' {
        publishDir = [
            path: { "${params.outdir}/fastq/${meta.id}/" },
            mode: params.publish_mode,
            pattern: '*.json'
        ]
    }
    withName: 'DOWNLOAD_FASTQ' {
        publishDir = [
            path: { "${params.outdir}/fastq/${meta.id}/" },
            mode: params.publish_mode,
            pattern: '*.{fastq.gz}'
        ]
    }
    withName: 'MERGE_SAMPLESHEETS' {
        publishDir = [
            path: { "${params.outdir}/metadata/" },
            mode: params.publish_mode,
            pattern: '*.csv'
        ]
    }
}